<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_main"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.shop.view.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.shop.view.FavoriteFragment"
        android:label="FavoriteFragment" />
    <fragment
        android:id="@+id/messageFragment"
        android:name="com.example.shop.view.MessageFragment"
        android:label="MessageFragment">

        <action
            android:id="@+id/action_messageFragment_to_addFragment"
            app:destination="@id/addFragment" />
    </fragment>

    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.shop.view.AddFragment"
        android:label="AddFragment" />

    <fragment
        android:id="@+id/myPageFragment"
        android:name="com.example.shop.view.MyPageFragment"
        android:label="MyPageFragment" />

</navigation>